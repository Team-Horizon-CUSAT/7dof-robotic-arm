<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="pan_tilt">
<xacro:property name="base_link_length" value="0.1"/> 
<xacro:property name="base_link_radius" value="0.2" /> 
<xacro:property name="pan_link_length" value="0.4"/> 
<xacro:property name="pan_link_radius" value="0.04" /> 

<xacro:macro name="inertial_matrix" params="mass">
    <inertial>
        <mass value="${mass}"/>
       <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
    </inertial>
</xacro:macro>


 <link name="base_link">
        <visual>
            <geometry>
              <cylinder radius="${base_link_radius}" length="${base_link_length}"/>  
            </geometry>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.03"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>
        <xacro:inertial_matrix mass="1"/>
    </link>
    <joint name="pan_joint" type="revolute">
       <parent link="base_link"/>
       <child link="pan_link"/>
       <origin xyz="0.0 0.0 0.1"/>
       <axis xyz="0.0 0.0 1.0"/> 
       <limit effort="300" velocity="0.1" lower="-3.14" upper="3.14"/>
       <dynamics damping="50" friction="1"/>
    </joint>
    <link name="pan_link">
       <visual>
           <geometry>
               <cylinder radius="${pan_link_radius}" length="${pan_link_length}"/>
           </geometry>
           <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.09"/>
           <material name="red">
                <color rgba="0 0 1 1"/>
           </material>
       </visual> 
       <xacro:inertial_matrix mass="1"/>
    </link>
    <joint name="tilt_joint" type="revolute">
        <parent link="pan_link"/>
        <child link="tilt_link"/>
        <origin xyz="0.0 0.0 0.2"/>
        <axis xyz="0.0 1.0 0.0"/>
        <limit lower="-3.14" upper="3.14" effort="300" velocity="0.1"/>
        <dynamics damping="50" friction="1"/>
    </joint>
    <link name="tilt_link">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.4"/>
            </geometry>
            <origin  rpy="0.0 1.5 0.0" xyz="0.0 0.0 0.0"/>
            <material name="green">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <xacro:inertial_matrix mass="1"/>
    </link>
</robot>